<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>商品统计</title>
    <link href="css/admin.css" rel="stylesheet">
	<link href="css/art.css" rel="stylesheet">
	<link href="css/default.css" rel="stylesheet">
	<link href="css/style.css" rel="stylesheet">
	<script type="text/javascript" src="js/jquery.js"></script>
     <script src="${jsDomain}/js/ChinaCity.js" type='text/javascript'></script>
		<script src="${jsDomain}/js/ChinaProvince.js" type='text/javascript'></script>
		<script src="${jsDomain}/js/ChinaTown.js" type='text/javascript'></script>
		<script src="${jsDomain}/js/jquery.selectboxes.js" type='text/javascript'></script>
		<script src="${jsDomain}/js/com.js" type='text/javascript'></script>
</head>

<body>
#getMothodSc("moduleName=admin.action.Common" "parameters=tag:1,vmpath:admin/head.vm,level:7,level2:37");
<div id="admin_right">
	<script src="/runtime/systemjs/my97date/wdatepicker.js" charset="UTF-8"></script>
<div class="headbar">
	<div class="position"><span>运营统计</span><span>&gt;</span><span>商品统计</span></div>
	<div class="operating">
		<div class="search">
		<form id="countgoosForm" method="post" action="getCountGoodsList.htm" name="">
		<input type="hidden" name="curPage" id="curPage" value="1">
		选择时间: 
			        <input type="radio" name="selecttime" value="1" #if($selecttime == 1)checked="checked"  #end/>上周
                		<input type="radio" name="selecttime" value="2" #if($selecttime == 2)checked="checked"  #end/>本周
                		<input type="radio" name="selecttime" value="3" #if($selecttime == 3)checked="checked"  #end/>上月
                		<input type="radio" name="selecttime" value="4" #if($selecttime == 4)checked="checked"  #end/>本月
		</form>
		</div>
	</div>
	<div class="field">
		<table class="list_table">
			<thead>
				<tr id="headth" role="head" class="">
					<th style="width: 58px;text-align: center;">编号</th>
					<th style="width: 106px;text-align: center;">商品名称</th>
					<th style="width: 91px;text-align: center;">货品名称</th>
					<th style="width: 91px;text-align: center;">销量</th>
					<th style="width: 99px;text-align: center;">总金额</th>
					<th style="width: 100px;text-align: center;">时间</th>
				</tr>
			</thead>
		</table>
	</div>
</div>
<div class="content" style="height: 436px;">
	<input type="hidden" value="" name="move_group">
	<input type="hidden" value="" name="move_point">
	<table class="list_table" id="list_table">
		<tbody id="conth">
		 #foreach( $cg in $cgList )
				<tr class="">
				<td style="width: 58px;text-align: center;">$cg.id</td>
				<td  style="width: 106px;text-align: center;">$cg.goods_name</td>
				<td title="0.00" style="width: 91px;text-align: center;">$cg.hp_name</td>
				<td title="0" style="width: 91px;text-align: center;">$cg.sale_num</td>
				<td title="2012-03-23" style="width: 99px;text-align: center;">$cg.balance</td>
				<td title="2012-03-23" style="width: 100px;text-align: center;">$cg.countTime</td>
			</tr>
			#end
					</tbody>
	</table>
	#getPageHtml("formId=countgoosForm" "parameters=pageNo:$page.pageNo,pageSize:$page.pageSize,totalCount:$page.totalCount,pageviewcount:$page.pageviewcount,vmpath:common/page.vm");
</div>
	
	</div>
	     
</body>
</html>
